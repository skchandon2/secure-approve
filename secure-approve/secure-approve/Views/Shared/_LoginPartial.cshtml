@using System.Security.Principal

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item"><span class="navbar-text text-dark">Hello @User.Claims.FirstOrDefault(c => c.Type.Contains("name")).Value !</span></li>
        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="LogOut">Sign Out</a></li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Sign In</a></li>
    }
</ul>